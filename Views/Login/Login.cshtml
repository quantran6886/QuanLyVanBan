
@{
    Layout = null;
}
@model AppNetShop.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Color Admin | Login</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content name="description" />
    <meta content name="author" />
    <link href="../assets/css/vendor.min.css" rel="stylesheet" />
    <link href="../assets/css/default/app.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://www.iconpacks.net/icons/2/free-reddit-logo-icon-2436-thumb.png" rel="icon" />
    <style>
        .show-btn-pass {
            position: absolute;
            top: 19px;
            right: 20px;
        }
        #btn_hiden_pass{
            cursor:pointer
        }
    </style>
</head>
<body class="pace-top">
    <div id="app" class="app">
        <div class="login login-v1">
            <div class="login-container">
                <div class="login-header">
                    <div class="brand">
                        <div class="d-flex align-items-center">
                            <span class="logo"></span> <b class="me-1">P/M</b>Quản Lý Thu Chi
                        </div>
                        <small>Phần mềm mang lại tiện ích,tính toán ,...</small>
                    </div>
                    <div class="icon">
                        <i class="fa fa-lock"></i>
                    </div>
                </div>


                <div class="login-body">

                    <div class="login-content fs-13px">
                        @using (Html.BeginForm("Login", "Login", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "validate-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-floating mb-20px " data-validate="Bạn chưa nhập tài khoản">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control fs-13px h-45px", autofocus = "autofocus", placeholder = "Nhập tài khoản" })
                                <label for="emailAddress" class="d-flex align-items-center">Tài khoản</label>
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "focus-input100" })
                            </div>
                            <div class="form-floating mb-20px" data-validate="Bạn chưa nhập mật khẩu">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control fs-13px h-45px",@id="pass", autofocus = "autofocus", placeholder = "Nhập mật khẩu" })
                                <label for="password" class="d-flex align-items-center">Mật khẩu</label>
                                <span class="show-btn-pass"><i class="fas fa-eye" id="btn_hiden_pass"></i></span>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "focus-input100" })
                            </div>
                            <div class="custom-control custom-checkbox text-left mb-2 mt-2 ml-2" hidden>
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", })
                                <label class="custom-control-label" for="RememberMe">Ghi nhớ.</label>
                            </div>
                            <div class="form-check mb-20px">
                                <input class="form-check-input" type="checkbox" value id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">
                                    Remember Me
                                </label>
                            </div>
                            <div class="login-buttons">
                                <button type="submit" class="btn btn-theme h-45px d-block w-100 btn-lg">Đăng nhập</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../assets/js/vendor.min.js" type="b01940c4d4e739628b421df8-text/javascript"></script>
    <script src="../assets/js/app.min.js" type="b01940c4d4e739628b421df8-text/javascript"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Y3Q0VGQKY3" type="b01940c4d4e739628b421df8-text/javascript"></script>
    <script type="b01940c4d4e739628b421df8-text/javascript">
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-Y3Q0VGQKY3');
    </script>
    <script src="/cdn-cgi/scripts/7d0fa10a/cloudflare-static/rocket-loader.min.js" data-cf-settings="b01940c4d4e739628b421df8-|49" defer></script>
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js/vef91dfe02fce4ee0ad053f6de4f175db1715022073587" integrity="sha512-sDIX0kl85v1Cl5tu4WGLZCpH/dV9OHbA4YlKCuCiMmOQIk4buzoYDZSFj+TvC71mOBLh8CDC/REgE0GX0xcbjA==" data-cf-beacon='{"rayId":"88f1f423eec4e6ae","r":1,"version":"2024.4.1","token":"4db8c6ef997743fda032d4f73cfeff63"}' crossorigin="anonymous"></script>
    <script>
        const passField = document.getElementById("pass");
        const showBtn = document.getElementById("btn_hiden_pass");
        showBtn.onclick = (() => {
            if (passField.type === "password") {
                passField.type = "text";
            } else {
                passField.type = "password";
            }
        });
    </script>
</body>
</html>
